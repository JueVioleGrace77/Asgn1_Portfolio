


<!-- Content for the Add page -->
<div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <p>Ill be glad to answer your question</p>
    
                <form action="" class="form" method="POST">
                    <div class="form-group">
                        <label for="FirstNameTextField">Name</label>
                        <input type="text" class="form-control" 
                        id="FirstNameTextField" 
                        name="firstName"
                        required>
                    </div>
    
                    <div class="form-group">
                        <label for="LastNameTextField">Email Address</label>
                        <input type="text" class="form-control" 
                        id="LastNameTextField" 
                        name="email"
                        required>
                    </div>
    
                    <div class="form-group">
                        <label for="AgeTextField">Subject</label>
                        <input type="text" class="form-control" 
                        id="AgeTextField" 
                        name="subject"
                        required>
                    </div>

                    <div class="form-group">
                            <label for="AgeTextField">Your Message</label>
                            <textarea row="4" cols ="50" type="text" class="form-control" 
                            id="AgeTextField" 
                            name="msg"
                            required> </textarea>
                        </div>
    
                    <button type="submit" class="btn btn-primary">
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>Submit</button>
                    <a href="/contact-list" class="btn btn-warning">
                    <i class="fa fa-undo" aria-hidden="true"></i> Cancel</a>
                </form>
    
    
            </div>
        </div>
    </div>
    